{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2017",   
    "module": "commonjs",
    "allowJs": true,  
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "paths": {
      "@IWeather/*": ["entities/weather/IWeather.ts"],
      "@ICity/*": ["entities/city/ICity.ts"],
      "@ICoordinate/*": ["entities/coordinate/ICoordinate.ts"],
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
